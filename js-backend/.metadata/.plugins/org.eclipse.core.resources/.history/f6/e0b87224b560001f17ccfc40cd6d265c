package com.capstone.backend.userDetails;

import java.time.LocalDateTime;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.capstone.backend.user.User;

@Service
public class UserDetailsService {

	
	@Autowired
	private UserDetailsRepository userDetailsRepo;
	
	public void createUserDetails(User newUser) {
		userDetailsRepo.save(new UserDetails(newUser.getUser_id(), newUser.getUsername(), newUser.getEmail(), LocalDateTime.now()));
	}
	
	public void loadUserByUsername(String username) {
		
	}
}
